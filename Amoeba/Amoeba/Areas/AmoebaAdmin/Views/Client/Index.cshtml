@{
    int count = 1;
}
@model IEnumerable<Client>
<a asp-action="Create"><button type="button" class="btn btn-success">Create</button></a>
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table with contextual classes</h4>
            <p class="card-description">
                Add class <code>.table-{color}</code>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                               #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                               Profession
                            </th>
                            <th>
                                Description
                            </th>
                             <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                        <tr class="table-info">
                            <td>
                                @(count++)
                            </td>
                            <td>
                                @item.Image
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                               @item.Description
                            </td>
                            <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"> <button type="button" class="btn btn-success">Edit</button></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"> <button type="button" class="btn btn-warning">Delete</button></a>
                            </td>
                        </tr>   
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>